{
    "manifest_version": 2,
    "name": "AISIS Prettify - Improved Schedule and Filter",
    "version": "0.2.0",
  
    "description": "An extension that aims to make AISIS easier to work with",
  
    "browser_action": {
      "default_title": "AISIS Prettify - Improved Schedule and Filter",
      "default_icon": "/images/icon_48.png",
      "default_popup": "popup.html"
    },
  
    "author": "Ian De La Cruz & Gelo Funelas",
    "content_scripts": [
      {
        "matches": ["*://aisis.ateneo.edu/*"],
        "css": ["style.css","/styles/secrets.css"],
        "js": ["app.js", "/scripts/modules.js", "/scripts/secrets.js", "/scripts/schedule.js"]
      }
    ],
    "permissions": [
      "tabs",
      "storage"
    ],
    "short_name": "AISIS Prettify",
    "web_accessible_resources": [
      "images/hutao/*.png",
      "scripts/*.js",
      "css/*.css",
      "*.css",
      "*.js"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "dev.gelofunelas@gmail.com"
        }
    }
  }