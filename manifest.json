{
    "manifest_version": 3,
    "name": "AISIS Prettify",
    "description": "An extension that aims to make AISIS easier to work with",
    "version": "0.1.0",
    "icons": {
        "16": "/images/icon_16.png",
        "48": "/images/icon_48.png",
       "128": "/images/icon_128.png" },
    "action": {
        "default_icon": "/images/icon_48.png",
        "default_popup": "popup.html"
    },
    "author": "Ian De La Cruz & Gelo Funelas",
    "content_scripts": [{
        "matches": ["*://aisis.ateneo.edu/*"],
        "css": ["style.css","/styles/secrets.css"],
        "js": ["app.js", "/scripts/modules.js", "/scripts/secrets.js"]
    }],
    "permissions": [
        "tabs",
        "storage",
        "background"
    ],
    "web_accessible_resources": [{
        "resources": ["/images/hutao/*.png"],
        "matches": ["*://aisis.ateneo.edu/*"],
       "extension_ids": []
    }]
}
