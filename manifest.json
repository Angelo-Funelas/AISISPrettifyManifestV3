{
    "manifest_version": 3,
    "name": "AISIS Prettify",
    "description": "An extension that aims to make AISIS easier to work with",
    "version": "0.1.0",
    "icons": {
        "19": "/images/icon.png"
    },
    "action": {
        "default_icon": "/images/icon.png",
        "default_popup": "popup.html"
    },
    "author": "Ian De La Cruz & Gelo Funelas",
    "content_scripts": [{
        "matches": ["*://aisis.ateneo.edu/*"],
        "css": ["style.css"],
        "js": ["app.js", "dropdown.js"]
    }],
    "permissions": [
        "tabs",
        "storage",
        "background"
    ],
    "web_accessible_resources": [{
        "resources": [],
        "matches": ["*://aisis.ateneo.edu/*"],
       "extension_ids": []
    }]
}
