{
    "manifest_version": 3,
    "name": "AISIS Prettify - Improved User Interface",
    "description": "An extension that aims to make AISIS easier to work with",
    "version": "1.2",
    "icons": {
        "16": "/images/icon_16.png",
        "48": "/images/icon_48.png",
       "128": "/images/icon_128.png" },
    "action": {
        "default_icon": "/images/icon_48.png",
        "default_popup": "popup.html"
    },
    "author": "Gelo Funelas",
    "content_scripts": [
        {
            "matches": ["*://aisis.ateneo.edu/*"],
            "css": ["/styles/style.css","/styles/secrets.css"],
            "js": [
                "/scripts/homepage.js",
                "/scripts/login.js",
                "/scripts/nav.js",
                "/scripts/headModifier.js",
                "/scripts/modules.js"
            ],
                "run_at": "document_start"
        },
        {
            "matches": ["*://aisis.ateneo.edu/*"],
            "css": ["/styles/style.css","/styles/secrets.css"],
            "js": [
                "/scripts/jquery-3.7.1.min.js",
                "/scripts/box2d.min.js",
                "/scripts/rAF.js",
                "/scripts/loop.js",
                "/scripts/osu.js",
                "/scripts/pageModifier.js",
                "/scripts/app.js"
            ],
                "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "tabs",
        "storage",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "https://aisis.ateneo.edu/*"
    ],
    "declarative_net_request": {
        "rule_resources": [{
            "id": "block_rules",
            "enabled": true,
            "path": "rules.json"
        }]
    },
    "web_accessible_resources": [{
        "resources": [
            "/images/*.png",
            "/images/hutao/*.png",
            "/images/icons/*.png",
            "/images/icons/*.svg",
            "/images/bg/*.svg",
            "/eggs/fd/*.osu",
            "/eggs/fd/*.wav",
            "/eggs/fd/*.mp3",
            "/eggs/*.wav",
            "/eggs/*.png",
            "/styles/*.css",
            "/styles/fonts/*.ttf",
            "/scripts/*.js",
            "/html/*.html"
        ],
        "matches": ["*://aisis.ateneo.edu/*"]
    }]
}
